# Generated by ubi-init

override IMAGE_NAME := ubi-micro-foo
IMAGE_TAG ?= snapshot
IMAGE_REPO ?= quay.io/$(USER)

build:
	@podman build --layers=true -t $(IMAGE_NAME):$(IMAGE_TAG) .

run:
	@podman run -it --rm $(IMAGE_NAME):$(IMAGE_TAG)

push: build
	@podman tag $(IMAGE_NAME):$(IMAGE_TAG) $(IMAGE_REPO)/$(IMAGE_NAME):latest
	@podman push $(IMAGE_REPO)/$(IMAGE_NAME):latest
